#!/usr/bin/mksh

source $HOME/.mksh/helper.mksh

## Create data dir if not existent
[[ ! -e  $HOME/.local/data/mksh ]] && mkdir -p "$HOME/.local/data/mksh"

## Enable history
HISTSIZE=10000
HISTFILE="$HOME/.local/data/mksh/history"

## Setup GO
[[ -e $HOME/gocode ]] && export GOPATH="$HOME/gocode"
[[ -e $HOME/gocode/bin ]] && export PATH="$HOME/gocode/bin:$PATH"

[[ -d $HOME/bin ]] && export PATH="$HOME/bin:$PATH"

## Prompt needs helper include
PS1=$'\E[31;1m$(_exit_status)\E[0m\E[32;1m$LOGNAME$_POLYGLOT_HOSTNAME_STRING\E[0m \E[34;1m$(_prompt_dirtrim $POLYGLOT_PROMPT_DIRTRIM)\E[0m\E[33m$(_branch_status ksh93)\E[0m \$ '


alias ls="ls --color"
alias ll="ls -lsa"
