exec --no-startup-id compton --opacity-rule '100:window_type = "dock" && class_g = "i3bar"' --config ~/.config/compton.conf -b
exec --no-startup-id /usr/bin/xrdb -load ~/.Xresources
exec --no-startup-id /usr/bin/nm-applet
exec --no-startup-id /usr/bin/clipmenud
 
exec_always --no-startup-id /usr/bin/feh --bg-scale /home/toke/Pictures/Wallpapers/default.jpg

bindsym $mod+Insert exec clipmenu

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
	font pango: System San Francisco Display, FontAwesome 11

#        status_command i3status
        status_command i3blocks

	position bottom
# strip_workspace_Numbers yes
#	height 25
	bindsym button4 nop
	bindsym button5 nop


	colors {
	  separator $base03
	  background $base01
	  statusline $base05
#                            border  background text
	  focused_workspace  $base01 $base01    $base07
	  active_workspace   $base01 $base02    $base03
	  inactive_workspace $base01 $base01    $base03
	  urgent_workspace   $base01 $base01    $base08
	}
}

